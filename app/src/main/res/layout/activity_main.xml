<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/question"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        app:layout_constraintBottom_toTopOf="@+id/top_most_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        app:layout_constraintBottom_toTopOf="@+id/top_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/top_most_guideline" />

    <Button
        android:id="@+id/button7"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="7"
        android:textColor="#393737"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toStartOf="@+id/buttons_phase_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/top_guideline"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/button8"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="8"
        android:textColor="#393737"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/buttons_phase_2"
        app:layout_constraintStart_toStartOf="@+id/buttons_phase_1"
        app:layout_constraintTop_toTopOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="9"
        android:textColor="#393737"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/buttons_phase_3"
        app:layout_constraintStart_toStartOf="@+id/buttons_phase_2"
        app:layout_constraintTop_toTopOf="@+id/button7" />

    <!--        TODO: Button line 2-->

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="÷"
        android:textColor="#393737"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/buttons_phase_3"
        app:layout_constraintTop_toTopOf="@+id/button7" />

    <Button
        android:id="@+id/button4"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="4"
        android:textColor="#393737"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintEnd_toStartOf="@+id/buttons_phase_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button5"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="5"
        android:textColor="#393737"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/buttons_phase_2"
        app:layout_constraintStart_toStartOf="@+id/buttons_phase_1"
        app:layout_constraintTop_toTopOf="@+id/button4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="6"
        android:textColor="#393737"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/buttons_phase_3"
        app:layout_constraintStart_toStartOf="@+id/buttons_phase_2"
        app:layout_constraintTop_toTopOf="@+id/button4" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="×"
        android:textColor="#393737"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/buttons_phase_3"
        app:layout_constraintTop_toTopOf="@+id/button4" />

    <Button
        android:id="@+id/button1"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="1"
        android:textColor="#393737"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button0"
        app:layout_constraintEnd_toStartOf="@+id/buttons_phase_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="2"
        android:textColor="#393737"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/buttons_phase_2"
        app:layout_constraintStart_toStartOf="@+id/buttons_phase_1"
        app:layout_constraintTop_toTopOf="@+id/button1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="3"
        android:textColor="#393737"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/buttons_phase_3"
        app:layout_constraintStart_toStartOf="@+id/buttons_phase_2"
        app:layout_constraintTop_toTopOf="@+id/button1" />

    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="−"
        android:textColor="#393737"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/buttons_phase_3"
        app:layout_constraintTop_toTopOf="@+id/button1" />

    <Button
        android:id="@+id/button0"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="0"
        android:textColor="#393737"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/buttons_phase_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="."
        android:textColor="#393737"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/buttons_phase_2"
        app:layout_constraintStart_toStartOf="@+id/buttons_phase_1"
        app:layout_constraintTop_toTopOf="@+id/button0" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="+"
        android:textColor="#393737"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/buttons_phase_3"
        app:layout_constraintTop_toTopOf="@+id/button0" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="="
        android:textColor="#393737"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/buttons_phase_3"
        app:layout_constraintStart_toStartOf="@+id/buttons_phase_2"
        app:layout_constraintTop_toTopOf="@+id/button0" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#F44336"
        android:text="Clear"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottom_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.24" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.83" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttons_phase_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttons_phase_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttons_phase_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_most_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12" />

</androidx.constraintlayout.widget.ConstraintLayout>
